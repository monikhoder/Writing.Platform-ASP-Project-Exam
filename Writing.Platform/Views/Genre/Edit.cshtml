@model Writing.Platform.Models.ViewModel.EditGenreRequest
@{
}
<div class="container bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Genre</h1>
    </div>
</div>

<div class="container py-1">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">ID</label>
            <input type="text" class="form-control" id="id" asp-for="Id" readonly />
        </div>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" id="description" asp-for="Description" />
        </div>
        <div class="mb-3">
            <div class="d-flex">
                <button type="submit" class="btn btn-dark btn-sm">Update</button>
                <button type="submit" class="btn btn-danger btn-sm ms-2" asp-area="" asp-controller="Genre" asp-action="Delete">Delete</button>
                <a class="btn btn-primary btn-sm ms-2" asp-area="" asp-controller="Genre" asp-action="List">Back</a>
            </div>

        </div>

    </form>
</div>