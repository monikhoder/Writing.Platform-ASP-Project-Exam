@{
    ViewData["Title"] = "Error - Page Not Found";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 text-danger">Oops!</h1>
            <p class="lead">We couldn't find the page you're looking for.</p>
            <p class="text-muted">It seems like the Genre you're trying to Edit/Delete doesn't exist or has been removed.</p>
            <hr class="my-4">
            <p>Here are some helpful links instead:</p>
            <div class="mt-4">
                <a href="/" class="btn btn-primary btn-lg">Go to Home</a>
                <a class="btn btn-outline-secondary btn-lg" asp-area="" asp-controller="Genre" asp-action="List">View All Genre</a>
            </div>
        </div>
    </div>
</div>