@model Writing.Platform.Models.ViewModel.AddGenreRequest
@{
}
<div class="container bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Genre</h1>
    </div>
</div>
<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" id="description" asp-for="Description" />
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark btn-sm">Submit</button>
        </div>
    </form>
</div>